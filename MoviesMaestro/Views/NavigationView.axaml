<UserControl
    x:Class="MoviesMaestro.NavigationView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MoviesMaestro.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid RowDefinitions="auto,auto,auto, *, auto">
        <controls:MenuItem
            Grid.Row="0"
            Content="Movies"
            Kind="Movie" />
        <controls:MenuItem
            Grid.Row="1"
            Content="Series"
            Kind="Television" />
        <controls:MenuItem
            Grid.Row="2"
            Content="People"
            Kind="People" />
        <controls:MenuItem
            Grid.Row="4"
            Content="Settings"
            Kind="Settings" />
    </Grid>

</UserControl>


